<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.nakshi.rohitour.repository.admin.AdminCategoryMapper">

    <resultMap id="CategoryMap" type="com.nakshi.rohitour.dto.CategoryDto">
        <id property="categoryId" column="category_id"/>

        <result property="parentId" column="parent_id"/>
        <result property="categoryCode" column="category_code"/>
        <result property="categoryName" column="category_name"/>

        <result property="depth" column="depth"/>
        <result property="sortOrder" column="sort_order"/>
        <result property="isActive" column="is_active"/>

        <result property="createdAt" column="created_at"/>
        <result property="updatedAt" column="updated_at"/>
    </resultMap>
    <!--
         트리 구조 정렬(Tree Ordering) 이라고 부르는 패턴
         대분류 먼저 나오고 → 각 대분류 바로 아래에 자기 소분류들이 묶여서 나오게
    -->
    <select id="findAll" resultMap="CategoryMap" parameterType="com.nakshi.rohitour.dto.CategoryDto">
        SELECT
        category_id,
        parent_id,
        category_code,
        category_name,
        depth,
        sort_order,
        is_active,
        created_at,
        updated_at
        FROM categories
        <where>
            <!-- 분류 (대/소) -->
            <if test="depth != null">
                AND depth = #{depth}
            </if>

            <!-- 상위 카테고리 -->
            <if test="parentId != null">
                AND parent_id = #{parentId}
            </if>

            <!-- 사용 여부 -->
            <if test="isActive != null and isActive != ''">
                AND is_active = #{isActive}
            </if>

            <!-- 검색어 (이름 / 코드) -->
            <if test="keyword != null and keyword != ''">
                AND (
                category_name LIKE '%' + #{keyword} + '%'
                OR category_code LIKE '%' + #{keyword} + '%'
                )
            </if>
        </where>
        ORDER BY
        COALESCE(parent_id, category_id), /* 부모기준으로 묶기 */
        depth ASC,
        sort_order ASC
    </select>


    <insert id="insert" parameterType="com.nakshi.rohitour.dto.CategoryDto">
        INSERT INTO categories (
            parent_id,
            category_code,
            category_name,
            depth,
            sort_order,
            is_active,
            created_at,
            updated_at
        ) VALUES (
             #{parentId},
             #{categoryCode},
             #{categoryName},
             #{depth},
             #{sortOrder},
             #{isActive},
             GETDATE(),
             GETDATE()
                 )
    </insert>

    <update id="update"  parameterType="com.nakshi.rohitour.dto.CategoryDto">
        UPDATE categories
        SET
            category_name = #{categoryName},
            sort_order    = #{sortOrder},
            is_active     = #{isActive},
            updated_at    = GETDATE()
        WHERE category_id = #{categoryId}
    </update>
    <!-- 논리 => 비활성화 -->
    <update id="deactivate" parameterType="long">
        UPDATE categories
        SET
            is_active  = 'N',
            updated_at = GETDATE()
        WHERE category_id = #{id}
          AND is_active = 'Y'
    </update>

    <!-- 물리 => 삭제 -->
    <delete id="delete" parameterType="long">
        DELETE FROM categories
        WHERE category_id = #{id}
    </delete>

    <!-- 중복 체크 -->
    <select id="countDuplicate" resultType="int">
        SELECT COUNT(*)
        FROM categories
        WHERE depth = #{depth}
        AND sort_order = #{sortOrder}
        <if test="parentId != null">
            AND parent_id = #{parentId}
        </if>
        <if test="excludeId != null">
            AND category_id <![CDATA[<>]]> #{excludeId}
        </if>
    </select>

</mapper>
